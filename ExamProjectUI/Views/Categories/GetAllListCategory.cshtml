
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<EntityLayer.Entities.Category>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kategori Listesi</h2>

<table class="table text-center">
    <thead>
    <tr>
        <th>Id</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>
                <a asp-action="UpdateCategory" asp-route-id="@category.Id">Güncelle</a> |
                <a asp-action="Delete" asp-route-id="@category.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<br>
<a asp-action="CreateCategory" class="btn btn-primary">Kategori Ekle</a>