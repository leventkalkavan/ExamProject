@model BusinessLayer.DTOs.ChoiceDto.UpdateChoiceDto

<h2>Seçeneği Güncelle</h2>

<form asp-action="UpdateChoice" method="post">
    <div class="form-group">
        <label asp-for="Text" class="control-label">Seçenek Metni</label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrueChoice" class="control-label">Doğru Seçenek Mi?</label>
        <select asp-for="TrueChoice" class="form-control">
            <option value="true" selected>Evet</option>
            <option value="false">Hayır</option>
        </select>
        <span asp-validation-for="TrueChoice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionId" class="control-label">Soru</label>
        <select asp-for="QuestionId" asp-items="@ViewBag.Questions" class="form-control">
            <option value="" disabled>Soru Seçiniz</option>
        </select>
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <input type="submit" value="Güncelle" class="btn btn-primary" />
    </div>
</form>