@model BusinessLayer.DTOs.ExamAssignmentDtos.CreateExamAssignmentDto

<h2>Yeni Sınav Ataması </h2>

<form asp-action="CreateExamAssignment" method="post">
    <div class="form-group">
        <label asp-for="ExamId" class="control-label">Sınav:</label>
        <select asp-for="ExamId" class="form-control" asp-items="@(new SelectList(ViewBag.Exams, "Value", "Text"))">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">Atanacak Kişi:</label>
        <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "Value", "Text"))">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartTime" class="control-label">Başlama Saati:</label>
        <input asp-for="StartTime" class="form-control"/>
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime" class="control-label">Bitiş Saati:</label>
        <input asp-for="EndTime" class="form-control"/>
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <br>
    <div class="form-group">
        <input type="submit" value="Sınavı Ata" class="btn btn-primary"/>
    </div>
</form>