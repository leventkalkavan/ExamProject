@model List<BusinessLayer.DTOs.QuestionCategoryDtos.ResultQuestionCategoryDto>

@{
    ViewBag.Title = "Question Categories List";
    Layout = "_Layout";
}

<h2>Soru listesi</h2>

<table class="table text-center">
    <thead>
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Sınav</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>@category.ExamName</td>
            <td>
                <a asp-action="UpdateQuestionCategory" asp-route-id="@category.Id">Güncelle</a> |
                <a asp-action="Delete" asp-route-id="@category.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<br>
<a asp-action="CreateQuestionCategory" class="btn btn-primary">Soru Kategorisi Oluştur</a>