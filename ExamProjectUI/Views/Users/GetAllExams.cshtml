@model List<EntityLayer.Entities.ExamAssignment>

<h2 class="text-center"> Atanan Sınavlarım</h2>

@if (Model != null && Model.Any())
{
    <table class="table text-center">
        <thead>
            <tr>
                <th>Sınav Adı</th>
                <th>Başlangıç Zamanı</th>
                <th>Bitiş Zamanı</th>
                <th>İşlemler</th>
                <th>Geçme Durumu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var examAssignment in Model)
            {
                <tr>
                    <td>@examAssignment.Exam.Name</td>
                    <td>@examAssignment.StartTime.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@examAssignment.EndTime.ToString("dd-MM-yyyy HH:mm")</td>

                    @if (examAssignment.UserExamAnswers != null && examAssignment.UserExamAnswers.Any())
                    {
                        <td>
                            <span>Sınava Girdiniz.</span>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-action="StartExam" asp-route-examAssignmentId="@examAssignment.Id">Sınava Git</a>
                        </td>
                    }

                    <td>
                        @if (examAssignment.UserExamAnswers != null && examAssignment.UserExamAnswers.Any())
                        {
                            var totalScore = examAssignment.UserExamAnswers.Sum(uea => uea.Score);
                            var successScore = examAssignment.Exam.SuccessScore;

                            <span style="color: @(totalScore >= successScore ? "green" : "blue")">
                                @((totalScore >= successScore) ? "Başarılı" : "Başarısız")
                            </span>
                        }
                        else
                        {
                            <span>Henüz değerlendirilmedi</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">Henüz size atanmış sınav bulunmamaktadır.</p>
}